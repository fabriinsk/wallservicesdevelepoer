{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext", // ou "commonjs"
    "moduleResolution": "node",
    "jsx": "preserve", // Ou "react" se estiver usando versões anteriores do React
    "strict": true, // Se quiser verificar rigorosamente o código
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/**/*",
    "components/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
